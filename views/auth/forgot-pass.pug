extends ../layout/index

block content
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina
        div.mt-8.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow
                form.space-y-5
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Correo electrónico
                        input#email.w-full.px-3.py-2.border.border-gray-400.rounded-md.placeholder-gray-400(placeholder="Correo electrónico" type="email" name="email")
                    div(style= "text-align:center")
                        input(class= "w-5/6 h-16 bg-indigo-400 hover:bg-indigo-800 rounded-md font-extrabold text-white py-3 cursor-pointer" type="submit" value = "Enviar token")